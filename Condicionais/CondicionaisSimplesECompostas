#include <stdio.h>
#include <stdlib.h>

//Função principal do programa sem retorno
void main () {

    //Definindo variáveis
    int a = 5, opcao = 3;
    float  b= 2.5;
    char c =  'x';

    //Condicional Simples
     if(a == 5){
        printf("A variavel a = 5");
     }
     if(b == 2.5){
        printf("\nA variavel b = 2.5");
     }
     if(c == 'x'){
        printf("\nA variavel c = letra x");
     }

     //Número par ou ímpar
     if(a % 2 == 1){
        printf("\nA variavel a eh impar ");
     }else{
        printf("\nA variavel eh par");
     }

     //Condicional composta
     if(opcao == 1){
        printf("\nA opcao = 1");
     }else if(opcao ==2){
        printf("\nA opcao = 2");
     }else {
        printf("\nA opcao nao eh igual a 1 nem 2");
     }

    //Pausa o programa ao executar
    system("pause");

}
