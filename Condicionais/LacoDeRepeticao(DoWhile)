#include <stdio.h>
#include <stdlib.h>

//Função principal do programa sem retorno
void main(){

    //Contando até 10
    int a = 1, b = 10;

    //Primeiro confere a condição, depois repete o bloco
    while(a <= 10){
        //Imprimindo a na tela
        printf("\n%d", a);

        //Incremento
        a++; //a = a + 1;
    }

    //Alterando valor de a
    a = 1;

    //Primeiro executa uma vez, depois confere a condição
    do{
        //Imprimindo a na tela
        printf("\n%d", a);

        //Incremento
        a++; //a = a + 1;
    }while(a <= 10);

        //Pausa o programa após executar
        system("pause");

}
