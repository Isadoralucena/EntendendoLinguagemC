#include <stdio.h>
#include <stdlib.h>

//void= ausência de retorno
int main(void){
    void teste(void);
    teste();//Chamando a função
    teste();//Chamando a função
    teste();//Chamando a função
    return 0;
}

//
void teste(void){
    int variavelLocalAutomatica=2;//A variável é recriada toda vez que a função é chamada
    variavelLocalAutomatica*=2;//O mesmo que "variavelLocalAutomatica = variavelLocalAutomatica*2"
    printf("%i\n",variavelLocalAutomatica);
    return;
}
